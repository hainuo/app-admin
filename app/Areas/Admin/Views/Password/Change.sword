    </style>
@append
@section('script')
    <script>
        vm = new Vue({
            el: '#app',
            data: {
                edit: {
                    admin_name: "<?=di('identity')->getName()?>",
                    old_password: '',
                    new_password: '',
                    new_password_confirm: '',
                },
            },
            methods: {
                change: function () {
                    this.$axios.post(document.location.href, Qs.stringify(this.edit)).then(function (res) {
                        if (res.data.code === 0) {
                            window.location.href = "/";
                        } else {
                            this.$alert(res.data.message);
                            this.captcha_url = "captcha" + '?t=' + new Date().getTime();
                        }
                    }.bind(this));
                },
            }
        });
    </script>
@append
