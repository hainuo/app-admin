@section('script')
    <script>

        vm = new Vue({
            el: '#app',
            data: {
                request: {
                    user_name: '',
                    path: '',
                    client_ip: '',
                    client_udid: '',
                    created_time: [],
                    size: 20,
                    page: 1
                },
                response: {},
                detailVisible: false,
                detail: {}
            },
            mounted: function () {
                this.reload();
            },
            watch: {
                request: {
                    handler: _.debounce(function () {
                        this.reload();
                    }, 500),
                    deep: true
                }
            },
            methods: {
                show_detail: function (row) {
                    this.detailVisible = true;
                    this.ajax_get("detail?id=" + row.id, function (data) {
                        this.detail = data;
                    });
                }
            }
        });
    </script>
